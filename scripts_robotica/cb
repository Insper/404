#!/bin/bash

# Salva o diret처rio original
ORIG_DIR="$(pwd)"

cd ~/colcon_ws || exit 1

if [ "$#" -eq 1 ] && [ "$1" == "--force" ]; then
    rm -rf build install log
    echo "Diret처rios build, install e log removidos com sucesso."
    cd "$ORIG_DIR"
    exit 0
fi

if [[ "$@" =~ --force ]]; then
    echo "Erro: O argumento --force s처 deve ser usado sozinho, sem outros par창metros."
    cd "$ORIG_DIR"
    exit 1
fi

if [ $# -eq 0 ]; then
    colcon build --symlink-install --parallel-workers $(nproc)
else
    colcon build --symlink-install --parallel-workers $(nproc) --packages-select "$@"
fi

source ~/colcon_ws/install/setup.bash

cd "$ORIG_DIR"
